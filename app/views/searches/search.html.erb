<h2>Books search for</h2>

<table class="table table-hover table-inverse">

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
       <th colspan="3"></th>
    </tr>
  </thead>

  <% if @range == "User" %>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
    <% end %>
  </tbody>

    <% else %>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>
